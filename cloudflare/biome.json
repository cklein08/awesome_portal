{
  "files": {
    "includes": ["src/**", "package.json"]
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUndeclaredVariables": "error",
        "noNodejsModules": "off"
      },
      "suspicious": {
        "noConsole": "off"
      },
      "performance": {
        "useTopLevelRegex": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "options": {
            "maxAllowedComplexity": 20
          }
        }
      }
    }
  },
  "formatter": {
    "includes": ["**", "!**/package.json", "!**/license-checker-config.json"],
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "globals": []
  },
  "overrides": [
    {
      "includes": ["**/test/**/*.js"],
      "javascript": {
        "globals": ["afterEach", "afterAll", "beforeEach", "beforeAll", "describe", "it"]
      },
      "linter": {
        "rules": {
          "style": {
            "noDoneCallback": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "enabled": true,
    "root": "../",
    "clientKind": "git",
    "defaultBranch": "main"
  }
}
